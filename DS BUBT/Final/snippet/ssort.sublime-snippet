for (int i = 0; i < ${1:n}; i++) {
  int min_index = i;
  for (int j = i + 1; j < ${1:n}; j++) {
    if (${2:a}[j] < ${2:a}[min_index]) {
      min_index = j;
    }
  }
  swap(${2:a}[i], ${2:a}[min_index]);
}
]]></content>
    <tabTrigger>ssort</tabTrigger>
    <scope>source.c++, source.c</scope>
    <description>Selection Sort Loop</description>
</snippet>
